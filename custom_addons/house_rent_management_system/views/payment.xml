<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_payment_tree" model="ir.ui.view">
        <field name="name">payment.payment.tree</field>
        <field name="model">payment.payment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="renter_id"/>
                <field name="month"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="payment_payment_form" model="ir.ui.view">
        <field name="name">payment.payment.form</field>
        <field name="model">payment.payment</field>
        <field name="arch" type="xml">
            <form>

                <header>
                    <!--<button id="acshigh" name="archive_equipment_request" type="object" attrs="{'invisible': [('archive', '=', True)]}"/>-->
                    <!--<button string="Reopen Request" name="reset_equipment_request" type="object" attrs="{'invisible': [('archive', '=', False)]}"/>-->
                    <!--<field name="stage_id" widget="statusbar" options="{'clickable': '1'}" attrs="{'invisible': [('archive', '=', True)]}"/>-->
                    <field name="state" widget="statusbar" options="{'clickable': '1'}" statusbar_visible="pending,paid"/>
                </header>

                <sheet>

                    <group>
                        <field name="renter_id"/>
                        <field name="month"/>

                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_payment_payment" model="ir.actions.act_window">
        <field name="name">Payment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.payment</field>
        <field name="view_mode">tree,form</field>
        <!--<field name="context">{}</field>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Payments !
            </p>
        </field>
    </record>
    <menuitem id="payment_menu"
              name="Payment"
              action="action_payment_payment"
              parent="house_rent_management_menu_root"
              sequence="1"/>
</odoo>